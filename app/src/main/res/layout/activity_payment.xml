<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fff"
                android:text="결제 화면"
                android:textSize="30sp"
                android:layout_gravity="center"/>
            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_color"
                app:tabBackground="@drawable/tab_selector"/>

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"/>

            <LinearLayout
                android:layout_marginTop="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/priceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:fontFamily="@font/fff"
                    android:text="  총 결제 금액:"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:fontFamily="@font/fff"
                    android:text="0"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="1">

                <Button
                    android:id="@+id/packing"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_btn"
                    android:fontFamily="@font/fff"
                    android:onClick="takeoff_Click"
                    android:layout_margin="10dp"
                    android:text="포장 하기"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/inShop"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_btn"
                    android:fontFamily="@font/fff"
                    android:onClick="eatin_Click"
                    android:layout_margin="10dp"
                    android:text="매장에서 식사"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calcMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fff"
                android:text="결제 수단"
                android:textSize="30sp"
                android:layout_gravity="center"/>



            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:columnCount="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/cash"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size80"
                        android:background="@drawable/round_btn"
                        android:drawableTop="@drawable/won"
                        android:fontFamily="@font/fff"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:onClick="credit"
                        android:text="현금"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/creditCard"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size80"
                        android:background="@drawable/round_btn"
                        android:drawableTop="@drawable/card2"
                        android:fontFamily="@font/fff"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:onClick="cash"
                        android:text="신용카드"
                        android:textColor="@color/white"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/toss"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size80"
                        android:background="@drawable/round_btn"
                        android:drawableTop="@drawable/toss"
                        android:fontFamily="@font/fff"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:onClick="toss"
                        android:text="토스"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/etc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size80"
                        android:background="@drawable/round_btn"
                        android:drawableTop="@drawable/etc"
                        android:fontFamily="@font/fff"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:onClick="etc"
                        android:text="기타 결제"
                        android:textColor="@color/white"
                        android:textSize="30sp" />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/tutorial_panel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_panel"
        android:alpha="0.5"
        android:clickable="true"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/tutorial_panel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_panel"
        android:alpha="0.5"
        android:clickable="true"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/tutorial_panel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_panel"
        android:alpha="0.5"
        android:clickable="true"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/tutorial_panel4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_panel"
        android:alpha="0.5"
        android:clickable="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tutorial_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="튜토리얼 텍스트 입니다."
        android:textSize="@dimen/fsize24"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="@dimen/size30"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/tutorial_next_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_btn"
        android:text="완료"
        android:textColor="@color/white"
        android:fontFamily="@font/fff"
        android:textSize="20sp"
        android:visibility="invisible"/>
</FrameLayout>
