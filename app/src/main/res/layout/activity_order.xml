<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!--    <com.google.android.material.appbar.AppBarLayout-->
        <!--        android:id="@+id/appbar"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="100dp"-->
        <!--        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">-->
        <!--        <ImageView-->
        <!--            android:id="@+id/backdrop"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:scaleType="centerCrop"-->
        <!--            android:src="@drawable/order_background_img" />-->
        <!--    </com.google.android.material.appbar.AppBarLayout>-->

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/fff"
            android:text="주문 화면"
            android:textSize="30sp" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color"
            app:tabBackground="@drawable/tab_selector"
            app:tabIndicatorColor="@color/sub_color"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/sub_color"
            app:tabTextAppearance="@style/tabTextStyle"
            app:tabTextColor="@color/white" />

        <FrameLayout
            android:id="@+id/tabContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@drawable/red"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tabContent"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="주문 품목 넣을자리"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/purchase"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_btn"
                    android:fontFamily="@font/fff"
                    android:onClick="purchase_Click"
                    android:text="결제하기"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <Button
                    android:layout_marginTop="5sp"
                    android:id="@+id/redo"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_btn"
                    android:fontFamily="@font/fff"
                    android:onClick="undo_Click"
                    android:text="주문 수정하기"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/tutorial_panel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_panel"
        android:alpha="0.5"
        android:clickable="true"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/tutorial_panel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_panel"
        android:alpha="0.5"
        android:clickable="true"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/tutorial_panel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_panel"
        android:alpha="0.5"
        android:clickable="true"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/tutorial_panel4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial_panel"
        android:alpha="0.5"
        android:clickable="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tutorial_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="튜토리얼 텍스트 입니다."
        android:textSize="@dimen/fsize24"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="@dimen/size30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</FrameLayout>
