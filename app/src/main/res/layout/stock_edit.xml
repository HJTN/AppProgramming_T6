<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/materImg"
        android:layout_width="@dimen/size80"
        android:layout_height="@dimen/size80"
        android:layout_marginStart="@dimen/size30"
        android:layout_marginTop="@dimen/size30"
        android:src="@drawable/hamburgericon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/materName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material"
        android:textSize="@dimen/fsize24"
        android:layout_marginEnd="@dimen/size30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/materImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/materNumEdit"/>

    <EditText
        android:id="@+id/materNumEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size30"
        android:layout_marginStart="@dimen/size30"
        android:layout_marginEnd="@dimen/size30"
        app:layout_constraintTop_toBottomOf="@id/materImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>