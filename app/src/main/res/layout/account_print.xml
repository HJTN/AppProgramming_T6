<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/listTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="출력 목록"
        android:textSize="@dimen/fsize32"
        android:textStyle="bold"
        android:textColor="@color/main_color"
        android:layout_marginStart="@dimen/size15"
        android:layout_marginTop="@dimen/size15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/totalSaleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 판매량"
        android:textSize="@dimen/fsize24"
        android:textStyle="bold"
        android:textColor="@color/sub_color"
        android:layout_marginTop="@dimen/size15"
        app:layout_constraintTop_toBottomOf="@id/listTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/totalAccountTitle"/>

    <TextView
        android:id="@+id/totalSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxx,xxx 개"
        android:textColor="@color/main_color"
        android:textStyle="bold"
        android:textSize="@dimen/fsize24"
        android:layout_marginTop="@dimen/size10"
        app:layout_constraintTop_toBottomOf="@id/totalSaleTitle"
        app:layout_constraintEnd_toStartOf="@id/totalAccount"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/totalAccountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 판매 금액"
        android:textSize="@dimen/fsize24"
        android:textStyle="bold"
        android:textColor="@color/sub_color"
        android:layout_marginTop="@dimen/size15"
        app:layout_constraintTop_toBottomOf="@id/listTitle"
        app:layout_constraintStart_toEndOf="@id/totalSaleTitle"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/totalAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxx,xxx 원"
        android:textColor="@color/main_color"
        android:textStyle="bold"
        android:textSize="@dimen/fsize24"
        android:layout_marginTop="@dimen/size10"
        app:layout_constraintTop_toBottomOf="@id/totalAccountTitle"
        app:layout_constraintStart_toEndOf="@id/totalSale"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>